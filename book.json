{
    "plugins": [ "theme-api", "header", "sharing", "toggle-chapters" ],
    "pluginsConfig": {
        "theme-api": {
            "languages": [
                {
                    "lang": "js",
                    "name": "JavaScript",
                    "default": true
                },
                {
                    "lang": "csharp",
                    "name": "C#"
                },
                {
                    "lang": "ruby",
                    "name": "ruby"

                },
                {
                    "lang": "shell",
                    "name": "cURL"
                }
            ]
        },
      "layout": {
            "headerPath" : "layouts/header.html"
        },
      "sharing": {
            "facebook": false,
            "twitter": false,
            "google": false,
            "weibo": false,
            "instapaper": false,
            "vk": false,
            "all": [
            "facebook", "google", "twitter",
            "weibo", "instapaper"
        ]
      }
    }
}
